<div class="page-header">
  <%= link_to broadcaster_themes_path, class: 'btn btn-default' do %>
    All Broadcaster_themes
  <% end %>
  <%= link_to edit_broadcaster_theme_path(@broadcaster_theme), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Theme: <%= @broadcaster_theme.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @broadcaster_theme.title %></dd>

</dl>


<dl class="dl-horizontal">
  <dt>Outlines:</dt>
  <dt><%= link_to 'Outlines', broadcaster_theme_outlines_path(@broadcaster_theme) %>: <%= @broadcaster_theme.broadcaster_outlines.count.to_i %> </dt>


  <dd >
  
  <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Body</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @broadcaster_theme.broadcaster_outlines.each do |broadcaster_outline| %>
        <%= content_tag :tr, id: dom_id(broadcaster_outline), class: dom_class(broadcaster_outline) do %>
          

                      <td><%= broadcaster_outline.body %></td>
          
          
            <td><%= link_to 'Show', broadcaster_outline %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
  </dd>

</dl>

<hr>
<hr>

<dl class="dl-horizontal">
  <dt><%= link_to 'Videos', broadcaster_theme_videos_path(@broadcaster_theme) %>: <%= @broadcaster_theme.broadcaster_videos.count.to_i %> </dt>

  <dd >
  
  <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>title</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @broadcaster_theme.broadcaster_videos.each do |broadcaster_video| %>
        <%= content_tag :tr, id: dom_id(broadcaster_video), class: dom_class(broadcaster_video) do %>
          

                      <td><%= broadcaster_video.title %></td>
          
          
            <td><%= link_to 'Show', broadcaster_video %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
  </dd>

</dl>
