<dl>
    <dt>
      <% if @press_kit_photo.image.attached? %>
          <%= link_to 'link to image', url_for(@press_kit_photo.image), id: "imagelink" %>&nbsp;&nbsp;
          <button onclick="copyToClipboard('#imagelink')" class="btn btn-primary">Copy link to image</button>

