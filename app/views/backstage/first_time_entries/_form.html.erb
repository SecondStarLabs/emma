  <%= form_with(model: [ :backstage, first_time_entry], local: true) do |form| %>

<div class="form-grid">
  <div class="form-header">
    <% if first_time_entry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(first_time_entry.errors.count, "error") %> prohibited this first_time from being saved:</h2>

        <ul>
        <% first_time_entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <aside class="form-sidebar-left">

  </aside>

  <div class="form-article">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :article_link %>
      <%= form.url_field :article_link, 
                      class:'form-control styled',
                      placeholder:"https://example.com",
                      pattern:"https://.*",
                      minlength:"7",
                      size:"22",
                      title: "URL must be a secure link"
      %>            

    </div>

    <div class="form-group">
      <%= form.label :article_image_link %>
      <%= form.url_field :article_image_link, 
                      class:'form-control styled',
                      placeholder:"https://example.com",
                      pattern:"https://.*",
                      minlength:"7",
                      size:"22",
                      title: "URL must be a secure link"
      %>            

    </div>

    <div class="form-group">
      <%= form.label :published_on %>
      <%= form.date_select :published_on, class: 'form-control' %>

    </div>

    <div class="form-group">
      <%= form.label :release_at %>
      <%= form.date_select :release_at, class: 'form-control' %>

    </div>

  <aside class="form-sidebar-right">
  </aside>
  
  <div class="form-footer">

    <div class="form-group">
      <% if first_time_entry.persisted? %>
        <div class="float-right">
          <%= link_to 'Destroy', 
              backstage_first_time_entry_path, 
              method: :delete, class: "text-danger", 
              data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>

      <%= form.submit class: 'btn btn-primary' %>

      <%= link_to "Cancel", edit_backstage_first_time_path(@first_time), class: "btn btn-link" %>
    </div>


  </div>
</div>

<% end %>
