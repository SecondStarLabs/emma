


<div class="row">
  <div class="col-sm-6">
    <h1>Blog_cards</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_blog_card_path, class: 'btn btn-primary' do %>
    Add New Card
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Blog list</th>
            <th>Position</th>
            
      </tr>
    </thead>

    <tbody>
      <% @blog_cards.each do |blog_card| %>
        <%= content_tag :tr, id: dom_id(blog_card), class: dom_class(blog_card) do %>
          
            <td><%= link_to blog_card.name, blog_card %></td>
          

                      <td><%= blog_card.blog_list %></td>
                      <td><%= blog_card.position %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
