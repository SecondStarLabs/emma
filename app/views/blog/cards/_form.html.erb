<%= form_with(model: blog_card, local: true) do |form| %>
  <% if blog_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog_card.errors.count, "error") %> prohibited this blog_card from being saved:</h2>

      <ul>
      <% blog_card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :position %>
    <%= form.number_field :position, class: 'form-control' %>
  </div>

  <div class="col-4">
    <div class="form-group" data-uppy="card[image]">
      <%= form.label :image %>
      <div>
        <% if @blog_card.image.attached? %>
          <%= image_tag @blog_card.image, width: 280, data: { behavior: 'uppy-preview' } %>
        <% else %>
          <%= link_to image_tag("svgs/image-regular.svg", width: 280, data: { behavior: 'uppy-preview' }), "#", width: 280, data: { behavior: "uppy-trigger" } %>

        <% end %>
      </div>

      <%= link_to "Upload Image", "#", data: { behavior: "uppy-trigger" } %>
    </div>
  
  </div>

  <div class="form-group">
    <% if blog_card.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', blog_card, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if blog_card.persisted? %>
      <%= link_to "Cancel", blog_card, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", blog_cards_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
